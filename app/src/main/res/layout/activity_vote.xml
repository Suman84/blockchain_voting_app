<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Vote">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/connectToEthNetwork"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="-1dp"
            android:onClick="connectToEthNetwork"
            android:text="Connect to Ethereum Network" />

        <Button
            android:id="@+id/createWallet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="230dp"
            android:layout_marginTop="16dp"
            android:onClick="createWallet"
            android:text="Create Wallet" />

        <Button
            android:id="@+id/getAddress"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connectToEthNetwork"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="49dp"
            android:onClick="getAddress"
            android:text="Get Address" />

        <Button
            android:id="@+id/sendTransaction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/connectToEthNetwork"
            android:layout_marginStart="57dp"
            android:layout_marginTop="45dp"
            android:layout_toEndOf="@+id/getAddress"
            android:onClick="sendTransaction"
            android:text="Send 1 Ether back" />

    </RelativeLayout>
</LinearLayout>